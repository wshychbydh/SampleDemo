<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="15dp"
      android:text="依赖库示例："
      android:textSize="20sp"
      android:textStyle="bold" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingStart="15dp"
      android:paddingEnd="15dp">

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toPermission"
        android:text="动态获取权限（permission）"
        android:textAllCaps="false" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toDownloadApk"
        android:text="下载安装apk（install）"
        android:textAllCaps="false" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toBanner"
        android:text="Banner（banner）"
        android:textAllCaps="false" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toGallery"
        android:text="画廊（gallery）"
        android:textAllCaps="false" />

      <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/toPhotoViewBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toPhotoView"
        android:text="相册/拍照（photo）"
        android:textAllCaps="false" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toScan"
        android:text="扫码（scan）"
        android:textAllCaps="false" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toAddress"
        android:text="通讯录选择器（book）"
        android:textAllCaps="false" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toPaging"
        android:text="分页（Paging）"
        android:textAllCaps="false" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toPaging2"
        android:text="分页2（Paging2）"
        android:textAllCaps="false" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toAdapter"
        android:text="通用适配器（recyclerAdapter）"
        android:textAllCaps="false" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toTheme"
        android:text="主题（skin）"
        android:textAllCaps="false" />

    </LinearLayout>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="15dp"
      android:text="功能示例："
      android:textSize="20sp"
      android:textStyle="bold" />

    <com.cool.eye.func.view.FlexBoxLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingStart="15dp"
      android:paddingEnd="15dp">

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toFilePermission"
        android:text="7.0文件权限" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toPlugin"
        android:text="动态加载apk"
        android:visibility="gone" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toAnimation"
        android:text="动画" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toTrendView"
        android:text="自定义走势图" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toVideo"
        android:text="播放视频" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toNotify"
        android:text="QQ、微信等消息监听" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toTask"
        android:text="打包任务" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toDialog"
        android:text="常用Dialog"
        android:textAllCaps="false" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toToast"
        android:text="通用Toast"
        android:textAllCaps="false" />

    </com.cool.eye.func.view.FlexBoxLayout>
  </LinearLayout>

</ScrollView>
